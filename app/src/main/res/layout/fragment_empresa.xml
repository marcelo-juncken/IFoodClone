<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_padrao"
    tools:context=".fragment.empresa.EmpresaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite seu e-mail"
                android:background="@drawable/bg_edit"
                android:padding="16dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_email_red"
                android:drawablePadding="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senha"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite sua senha"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit"
                android:padding="16dp"
                android:drawableStart="@drawable/ic_password"
                android:inputType="textPassword"
                android:drawablePadding="16dp"/>

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Criar conta"
                android:id="@+id/btn_criar_conta"
                android:textSize="16sp"
                android:textColor="@color/cor_padrao"
                android:textAllCaps="false"
                android:background="@drawable/bg_edit"
                android:layout_marginTop="16dp"/>



            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeProgressBarWhite"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>