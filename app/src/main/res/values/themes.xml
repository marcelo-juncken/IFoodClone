<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IfoodClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cor_padrao</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cor_padrao</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.IfoodClone2" parent="Theme.IfoodClone">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/cor_padrao</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.IfoodCloneSplash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/cor_padrao</item>
    </style>

    <style name="ThemeProgressBarWhite" parent ="Theme.IfoodClone">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ThemeProgressBarRed" parent ="Theme.IfoodClone">
        <item name="colorAccent">#FF0000</item>
    </style>

    <style name="CustomStyleTabLayout" parent ="Theme.IfoodClone">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeBnvOn" parent ="Theme.IfoodClone">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeWhite" parent ="Theme.IfoodClone">
        <item name="colorOnSecondary">@color/white</item>
    </style>

</resources>